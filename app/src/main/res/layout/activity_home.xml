<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.carles.simpleapps.HomeActivity">

    <LinearLayout
        android:id="@+id/title_myekstra_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="32dp"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6a5ac2"
        android:text="MyExtraSchool"
        android:textSize="30sp"
        android:textStyle="bold"
        />
        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp"
            />
    </LinearLayout>

    <View
        android:layout_above="@+id/feature_my_extra"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#616161"
        >
    </View>
    <LinearLayout
        android:id="@+id/feature_my_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title_myekstra_text"
        >
        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
       <ImageView
           android:id="@+id/image_android"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentLeft="true"
           android:background="@drawable/android_green"
           android:layout_marginStart="30dp"
           android:layout_marginLeft="30dp"
           />
            <View
                android:layout_centerHorizontal="true"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:background="#616161"/>
        <ImageView
                android:id="@+id/image_football"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/football_grey"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            >
            <ImageView
                android:id="@+id/image_arhcer"
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/archers_bow_orange"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                />
            <View
                android:layout_centerHorizontal="true"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:background="#616161"/>
            <ImageView
                android:id="@+id/image_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/trumpet"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
